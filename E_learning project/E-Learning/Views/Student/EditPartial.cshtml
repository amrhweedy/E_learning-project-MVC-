
@model StudentProfileViewModel


<div class=" shadow p-3 mb-5 bg-body-tertiary rounded mx-3" style="width: 25rem;height:33rem">
    <h1 class="text-center fw-bold m-2">Edit Profile</h1>


    <form method="post" action="/Student/EditPartial/@Model.Id">
        <img src="~/Images/Profile/@Model?.Profile_picture" class="card-img-top mx-3" style="width: 18rem;height:15rem;">
        <div class="mb-3">
            <label  class="form-label" asp-for="Bio">BIO</label>
            <input asp-for="Bio" class="form-control" value="@Model?.Bio" >
        </div>
        <div class="mb-3">
            <label  class="form-label" asp-for="Profile_picture">Profile picture</label>
            <input type="file" asp-for="Profile_picture" class="form-control" value="@Model?.Profile_picture">
        </div>
        <div class="modal-footer d-flex justify-content-center">
            <button type="button" class="btn btn-dark  p-3" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary  p-3">Update</button>
        </div>
    </form>
</div>